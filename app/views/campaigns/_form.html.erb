<%= form_for @campaign, :html => { :class => "form-horizontal campaign" } do |f| %>

  <% if @campaign.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :purpose, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :purpose, :class => 'form-control' %>
    </div>
    <%=f.error_span(:purpose) %>
  </div>
  <div class="form-group">
    <%= f.label :estimated_duration, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :estimated_duration, options_for_select(Campaign.estimated_durations.keys, @campaign.estimated_duration), :class => 'form-control' %>
    </div>
    <%=f.error_span(:estimated_duration) %>
  </div>
  <div class="form-group">
    <%= f.label :tag_names, :class => 'control-label col-lg-2' %>
    comma separated
    <div class="col-lg-10">
      <%= f.text_field :tag_names, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tag_names) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                campaigns_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
